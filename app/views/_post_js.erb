<div class="post">

  <br>

  <div class="post-header">
    <a href=<%= post.url%>><%= post.title %></a>
    <span class="post-url">(<%= post.url%>)</span>
  </div>

  <div class="post-details">
    <span class="details">
      <span class="points-tracker">
      <%= post.post_votes.count %>
      </span> point by <a href="/users/<%=post.user.id%>">
      <%= post.user.name %></a>
      <%= post.created_at %>
      <a href="/posts/<%= post.id %>"> <%= post.comments.count %> comments </a>
    </span>
  </div>
</div>
